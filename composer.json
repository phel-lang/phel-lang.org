{
    "name": "phel-lang/phel-website",
    "keywords": [
        "phel",
        "lisp",
        "functional",
        "language"
    ],
    "homepage": "https://phel-lang.org/",
    "license": "MIT",
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "phel-lang/phel-lang": "^0.24",
        "gacela-project/gacela": "^1.10"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^10.5",
        "symfony/var-dumper": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "PhelWeb\\": "build/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhelWebTests\\": "build/tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "platform": {
            "php": "8.3"
        }
    },
    "scripts": {
        "build": [
            "php build/api-page.php",
            "php build/api-search.php",
            "php build/generate-releases.php"
        ],
        "test": "./vendor/bin/phpunit",
        "post-install-cmd": [
            "php build/update-phel-version.php"
        ],
        "post-update-cmd": [
            "php build/update-phel-version.php"
        ]
    }
}
